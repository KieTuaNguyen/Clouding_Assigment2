<div class="mt-4" style="margin-bottom: 24px;">
  <div class="row">

    {{#each toys}}
    <div class="col-sm-6 col-lg-4">
      <div class="card card-toy-item">
        <img class="card-img-top" src="{{this.toyImage}}" alt="Card image cap">
        <div class="card-body">
          <h5 class="card-title">{{this.toyName}}</h5>
          <p class="card-text">${{this.toyPrice}}
          </p>
          <a href="#" class="btn btn-primary">View</a>
        </div>
      </div>
    </div>
    {{/each}}

  </div>
</div>